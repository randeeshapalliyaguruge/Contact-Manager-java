<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_log_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteText"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:layout_marginLeft="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_log_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_person_round" />

        <TextView
            android:id="@+id/tv_log_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/civ_log_image"
            android:layout_toRightOf="@id/civ_log_image"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Name"
            android:textIsSelectable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_log_name"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/civ_log_image"
            android:layout_toRightOf="@id/civ_log_image"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/tv_log_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/light_gray_background"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="Time" />
            <TextView
                android:id="@+id/tv_log_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Duration"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" />
        </LinearLayout>



        <ImageButton
            android:id="@+id/bt_addCallLogContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_person_add"
            android:contentDescription="Image"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />

    </RelativeLayout>
    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp" />
</LinearLayout>